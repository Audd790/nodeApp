extends infographic
block karyawanBtn
    button#byKaryawan.button(value="by_karyawan" disabled) By Karyawan
block info
    div(style="padding: 0.5em")
        div(style="display: flex; align-items: center; justify-content: center;")
            div.autocomplete
                input#karyawan(type="text", name="karyawan" )
        div(style="position: relative; height: 80vh; width: 80vw;")
            canvas#myChart
block append script
    script(src="/javascripts/karyawanchart.js")