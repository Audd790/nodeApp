extends infographic
block button
    .btn_group
        button#byKaryawan.button(value="/by_karyawan" disabled) By Karyawan
        button#Chart.button(value="/chart") Chart
        button#byDate.button(value="/by_date" ) By Date
block info
    div(style="padding: 0.5em")
        h1 Jumlah telat per karyawan
    .form-group#byDate
        select#tanggal2(style="margin: auto 0,5em")
            option(value='1') Januari
            option(value='2') Febuari 
            option(value='3') Maret
            option(value='4') April 
            option(value='5') Mei 
            option(value='6') Juni 
            option(value='7') Juli 
            option(value='8') Agustus
            option(value='9') September 
            option(value='10' ) Oktober 
            option(value='11') November 
            option(value='12') December
        select#mySelect(style="margin: auto 0,5em")
            option(value='D01')= "Admin Sales & Engineer"
            option(value='D02')= 'ERP'
            option(value='D03')='Estimator'
            option(value='D04')='Finance & Accounting'
            option(value='D05')='GTI'
            option(value='D06')='Logistik'
            option(value='D07')='MEP'
            option(value='D08')='Operation'
            option(value='D09')='PCS'
            option(value='D10' )='PPJM'
            option(value='D11')='Purchasing'
            option(value='D12')='RPE'
            option(value='D13')='Sales'
            option(value='D14')='Service'
            option(value='D15')='Team Bali'
            option(value='D16')='Teknisi TC'
    div(style="height:85vh; width:190vw")
        canvas#myChart
block append script
    script(src="/javascripts/karyawanchart.js")