extends infographic
block formAbsenBtn
    button#formAbsen.button(value="formAbsen" disabled) Form Izin
block info
    .block
        .container1
            
                case role
                    when 2: div 
                                h2 Form input izin karyawan
                                form#form
                                    div.form-group(style="display: flex;align-items: auto;justify-content: auto;flex-direction: row;")
                                        input#izin(type="radio" name="toggle" value="izin")
                                        label(for="toggle" style="margin-bottom: 0px") Izin
                                        input#izin(type="radio" name="toggle" value="cuti")
                                        label(for="toggle" style="margin-bottom: 0px") Cuti
                                        input#izin(type="radio" name="toggle" value="sakit")
                                        label(for="toggle" style="margin-bottom: 0px") Sakit 
                                    .form-group 
                                        label(for="surat") Upload Surat
                                        input#surat(type="file" name="surat")
                                    div.form-group(style="display: flex;align-items: auto;justify-content: auto;flex-direction: row;")
                                        div.form-group(style="display: flex;align-items: auto;justify-content: auto;flex-direction: column;")
                                            label(for="durasiDalamJam") Menit 
                                            input#durasiDalamJam(type="number" name="durasiDalamJam" min="1" max="24")
                                        div.form-group(style="display: flex;align-items: auto;justify-content: auto;flex-direction: column;")
                                            label(for="durasiDalamJam") Jam 
                                            input#durasiDalamJam(type="number" name="durasiDalamJam" min="1" max="24")
                                        div.form-group(style="display: flex;align-items: auto;justify-content: auto;flex-direction: column;")
                                            label(for="durasiDalamJam") Hari
                                            input#durasiDalamJam(type="number" name="durasiDalamJam" min="1" max="24")
                                    .form-group 
                                        label(for="tgl_izin") Tanggal akan izin
                                        input#tgl_izin2(type="date" name="tgl_izin")
                                    button#button(type='submit') Submit
                    when 1: div 
                                h2 Form input izin karyawan
                                form#form
                                    .form-group 
                                        label(for="tgl_izin") Tanggal akan izin
                                        input#tgl_izin1(type="date" name="tgl_izin")
                                    div(class="form-group autocomplete" autocomplete="off")
                                        label(for="nik") NIK Karyawan
                                        input#nik(type="text" name="nik" autocomplete="off" disabled)                        
                                    .form-group 
                                        label(for="getsurat") Ambil Surat Dokter
                                        button#getsurat(type="button" name="getsurat" disabled) Ambil Surat
    button#buttonDownload(type="button") Download
block append script 
    script(src="/javascripts/formAbsen.js") 

