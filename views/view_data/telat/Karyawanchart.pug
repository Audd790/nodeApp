extends telatPage
block nav 
    .block
        nav(aria-label="Breadcrumb" class="breadcrumb")
            ul
                li
                    a(href="/kehadiran/info") Home
                li
                    span(aria-current="page") Jumlah Telat Per bulan
block append info
    div(style="padding: 0.5em")
        if role !== 2
            div(style="display: flex; align-items: center; justify-content: center;")
                div.autocomplete
                    input#karyawan(type="text", name="karyawan" )
        div(style="position: relative; height: 80vh; width: 80vw;")
            canvas#myChart
block append script
    script(src="/javascripts/karyawanchart.js")
    if role == 1
        script(src="/javascripts/getChartDataAll.js")
    else 
        script(src="/javascripts/getChartData.js")